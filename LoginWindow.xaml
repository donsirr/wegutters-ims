<Window x:Class="WEGutters.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - WEGutters" Height="350" Width="400" Background="#2D2D30" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Western Edge Gutters" Foreground="White" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Username" Foreground="#CCCCCC" Margin="0,5"/>
            <TextBox x:Name="txtUsername" Background="#3E3E40" Foreground="White" Padding="5" BorderThickness="0"/>

            <TextBlock Text="Password" Foreground="#CCCCCC" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtPassword" Background="#3E3E40" Foreground="White" Padding="5" BorderThickness="0"/>

            <Button Content="Login" Click="Login_Click" Background="#007ACC" Foreground="White" Margin="0,20,0,0" Height="35" BorderThickness="0" FontWeight="Bold"/>
            <Button Content="Register New Account" Click="Register_Click" Background="Transparent" Foreground="#AAAAAA" Margin="0,10,0,0" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>