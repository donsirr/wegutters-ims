<Window x:Class="WEGutters.ManageSingleDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WEGutters"
        mc:Ignorable="d"
                Title="Manage Detail" Height="175" Width="350"
        Background="#2D2D30" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" Icon="/Resources/app_icon.png">

    <Window.Resources>

        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3E3E40"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Name -->
            <TextBlock x:Name="ManagedDetailLabel" Text="Category Name:" Foreground="White" Margin="0,5"/>
            <TextBox x:Name="ManagedDetailBox" Grid.Row="1" Margin="0,0,0,5" Style="{StaticResource SearchBoxStyle}"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button x:Name="SaveButton" Content="Save" Width="80" Padding="10,5" Margin="10,0" Background="#007ACC" Foreground="White" BorderThickness="0" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="80" Padding="10,5" Background="#3E3E40" Foreground="White" BorderThickness="0" Click="CancelButton_Click"/>
            </StackPanel>

        </Grid>
    </Grid>

</Window>
