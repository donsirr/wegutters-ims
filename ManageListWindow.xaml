<Window x:Class="WEGutters.ManageListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage List" Height="400" Width="300" Background="#2D2D30" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="InputBox" Width="180" Style="{StaticResource SearchBoxStyle}" Margin="0,0,5,0"/>
            <Button Content="Add" Click="Add_Click" Style="{StaticResource FilterButtonStyle}" Background="#007ACC" Foreground="White"/>
        </StackPanel>

        <ListBox x:Name="ItemListBox" Grid.Row="1" Background="#1E1E1E" BorderThickness="0" Foreground="White" DisplayMemberPath="Name"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Delete Selected" Click="Delete_Click" Style="{StaticResource FilterButtonStyle}" Background="#CA5100" Foreground="White"/>
            <Button Content="Close" Click="Close_Click" Style="{StaticResource FilterButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>